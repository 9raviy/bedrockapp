{
  "projectName": "bedrock-quiz",
  "environment": "prod",
  "domain": {
    "domainName": "hexmi.com",
    "subdomainName": "quiz",
    "hostedZoneId": "Z01335492T06E59B8E8ZZ",
    "customUrl": "https://quiz.hexmi.com"
  },
  "backend": {
    "runtime": "nodejs20.x",
    "timeout": 15,
    "memory": 128,
    "handler": "src/handlers/queryBedrock.handler",
    "environment": {
      "BEDROCK_MODEL_ID": "anthropic.claude-3-5-sonnet-20241022-v2:0",
      "LOG_LEVEL": "INFO"
    }
  },
  "frontend": {
    "buildCommand": "npm run build",
    "buildDir": "build",
    "caching": {
      "staticAssets": "max-age=31536000",
      "htmlFiles": "no-cache, no-store, must-revalidate"
    }
  },
  "infrastructure": {
    "region": "us-west-2",
    "sslRegion": "us-east-1",
    "stackName": "bedrock-quiz-prod-stack"
  },
  "features": {
    "enableSSL": true,
    "enableCloudFront": true,
    "enableCustomDomain": true,
    "enableMonitoring": false
  }
}
